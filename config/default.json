{
    "secretPath": "config/secret.json",
    "log4js": {
        "appenders": {
            "info": {
                "type": "file",
                "filename": "info.log",
                "maxLogSize": 10485760
            },
            "debug": {
                "type": "file",
                "filename": "debug.log",
                "maxLogSize": 10485760
            },
            "error": {
                "type": "file",
                "filename": "error.log",
                "maxLogSize": 10485760
            },
            "console": {
                "type": "console"
            },
            "stdout": {
                "type": "stdout"
            }
        },
        "categories": {
            "default": {
                "appenders": [
                    "info",
                    "console",
                    "stdout"
                ],
                "level": "INFO"
            },
            "debug": {
                "appenders": [
                    "debug",
                    "console",
                    "stdout"
                ],
                "level": "INFO"
            },
            "error": {
                "appenders": [
                    "error",
                    "console",
                    "stdout"
                ],
                "level": "WARN"
            }
        }
    }
}
